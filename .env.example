# Claude Code UI Environment Configuration
# Configuration for Docker deployment with Cline CLI and MCP TaskMaster AI

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Backend server port (Express API + WebSocket server)
PORT=3000

# Frontend development port (Vite dev server - only for local development)
VITE_PORT=5173

# =============================================================================
# CLINE CLI CONFIGURATION (Main LLM)
# =============================================================================

# Required: Cline CLI API key for LLM operations
CLINE_API_KEY=sk-your-cline-api-key-here

# Cline model to use (default: gpt-4)
CLINE_MODEL=gpt-4

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Required: Secret key for JWT token generation (min 32 characters)
JWT_SECRET=your-secret-key-min-32-chars-change-this-in-production

# =============================================================================
# CLAUDE CLI CONFIGURATION (Optional)
# =============================================================================

# Custom claude cli path (default: "claude")
CLAUDE_CLI_PATH=claude

# =============================================================================
# MCP TASKMASTER AI INTEGRATION (Optional)
# =============================================================================

# Enable MCP TaskMaster AI integration (default: true)
MCP_TASKMASTER_ENABLED=true

# MCP TaskMaster AI API key (optional)
TASKMASTER_API_KEY=taskmaster-your-api-key-here

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable file upload feature (default: true)
ENABLE_FILE_UPLOAD=true

# Enable git integration (default: true)
ENABLE_GIT_INTEGRATION=true

# Enable terminal access (default: true)
ENABLE_TERMINAL=true

# =============================================================================
# RESOURCE LIMITS
# =============================================================================

# Maximum file upload size in bytes (default: 52428800 = 50MB)
MAX_FILE_SIZE=52428800

# Session timeout in milliseconds (default: 3600000 = 1 hour)
SESSION_TIMEOUT=3600000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Node environment (development, production)
NODE_ENV=production

# Logging level (debug, info, warn, error)
LOG_LEVEL=info
